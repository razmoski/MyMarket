@model IEnumerable<SellMyStuff.Models.Article>

@{
    ViewBag.Title = "Filter";
    
}

<br>
<div class="jumbotron col-md-12">

    @foreach (var product in Model)
    {
        var img = product.Images.FirstOrDefault();   
        
        <div>
            <div class="card text-center col-sm-6 col-md-4 col-lg-3 " style="margin-top: 10px; ">

                <div class="card-body text-center">
                    <a href='@Url.Action("Details", new { id = product.Id })'>
                        @{
                            if (@img.FileName == null)
                            {
                                <div style="margin-top: 10px;">
                                    <img style="height: 200px; width: 230px; display: compact;" src="@Url.Content("~/Photos/" + "NotAvailable.png")" alt="Card image">
                                </div>
                            }
                            else
                            {
                                <div style="margin-top: 10px;">
                                    <img style="height: 200px; width: 230px; display: compact;" src="@Url.Content("~/Photos/" + img.FileName)" alt="Card image">
                                </div>
                            }
                        }
                    </a>

                    <h3>@Html.ActionLink(@product.Name, "Details", new { id = product.Id })</h3>

                </div>                  
            </div>
        </div>
    }
</div>

