@model SellMyStuff.Models.Article

@{
    ViewBag.Title = "Details";

    string ImageActive;
    string ActiveSlide;
    int SlideNo;
}

<h2>Product Details</h2>
<div>
    <div class="col-xs-12 col-md-6">
        <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <!-- Indicators -->
            <ol class="carousel-indicators">

                @foreach (var img in Model.Images)
                {
                    ActiveSlide = "";
                    SlideNo = +1;

                    if (Model.Images.First() == img)
                    {
                        ActiveSlide = "active";
                    }

                    <li href="#myCarousel" data-target="#myCarousel" data-slide-to="@SlideNo" class="@ActiveSlide"></li>
                }

            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner">

                @foreach (var img in Model.Images)
                {

                    ImageActive = "item";

                    if (Model.Images.First() == img)
                    {
                        ImageActive = "item active";
                    }

                    <div class="@ImageActive">
                        <img src="@Url.Content("~/Photos/" + img.FileName)" style="width:50%;margin:auto;">
                    </div>
                }

            </div>

            <!-- Left and right controls -->
            <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>

    <div class="col-xs-12 col-md-6">

        <ul class="nav nav-tabs">
            <li class="active"><a href="#Overview" data-toggle="tab" aria-expanded="true">Overview</a></li>
            <li class=""><a href="#Description" data-toggle="tab" aria-expanded="false">Description</a></li>
            <li class=""><a href="#Techspecs" data-toggle="tab" aria-expanded="false">Tech Specs</a></li>
        </ul>

        <div id="myTabContent" class="tab-content">
            <div class="tab-pane fade active in" id="Overview">
                <p></p>
                <ul>
                    <li class="text-info">Name         :  @Model.Name</li>
                    <li class="text-info">In Stock     :  @Model.StockQty</li>
                </ul>
            </div>

            <div class="tab-pane fade" id="Description">
                <p class="text-info">@Model.Description</p>
            </div>

            <div class="tab-pane fade" id="Techspecs">
                <p>Need an API Call of details</p>
            </div>
        </div>
    </div>
</div>


<div class="col-md-12">
    <br>
    <p>
        @Html.ActionLink("Edit", "Edit", "Articles", new { id = Model.Id }, new { @class = "btn btn-primary" })

        @Html.ActionLink("Back To List", "Index", "Articles", null, new { @class = "btn btn-primary" })
    </p>
</div>