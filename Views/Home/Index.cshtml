@model IEnumerable<SellMyStuff.Models.ArticlesGroup>

@{
    ViewBag.Title = "Home Page";
}

<div class="col-md-12">
    <img style="width:100%; height:200px" src="@Url.Content("~/Photos/" + "home-design.jpg")" alt="Card image">
</div>

<div class=" col-md-12">

    @foreach (var group in Model)
    {
        <div>
            <div class="card even card-border text-center col-sm-6 col-md-4 col-lg-3 " style="margin-top: 10px; height: 350px">

                <div class="card-body text-center">
                    <a href='@Url.Action("Dive", new { Id = group.Id })'>
                        @{
                            if (@group.FileName == null)
                            {
                                <div style="margin-top: 10px;">
                                    <img style="height: 200px; width: 230px; display: compact;" src="@Url.Content("~/Photos/" + "NotAvailable.png")" alt="Card image">
                                </div>
                            }
                            else
                            {
                                <div style="margin-top: 10px;">
                                    <img style="height: 200px; width: 230px; display: compact;" src="@Url.Content("~/Photos/" + group.FileName)" alt="Card image">
                                </div>
                            }
                        }
                    </a>

                    <h3>@Html.ActionLink(@group.Name, "Dive", new { Id = group.Id })</h3>
                    <p>@group.Description</p>
                </div>

            </div>
        </div>

    }

    
</div>
 
<div class="col-md-12">
    <br>
    @Html.Partial("_Footer")
</div>